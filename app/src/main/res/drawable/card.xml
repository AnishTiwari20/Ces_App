<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray background for the card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light gray color -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <!-- Black stroke for the card -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Black color for stroke -->
            <corners android:radius="8dp" /> <!-- Adjust the radius to match the background radius -->
        </shape>
    </item>
</layer-list>
